<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<part>
  <display-name>Gallery</display-name>
  <form>
    <mixin name="heading"/>
    <input type="ImageSelector" name="images">
      <label>Image</label>
      <occurrences minimum="1" maximum="0"/>
      <config>
        <allowPath>${site}/*</allowPath>
      </config>
    </input>
  </form>
</part>
