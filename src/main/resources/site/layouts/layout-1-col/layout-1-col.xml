<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<layout>
  <display-name>1 column</display-name>
  <form>
    <mixin name="menu-item"/>
    <input type="RadioButton" name="color">
      <label>Background color</label>
      <occurrences minimum="1" maximum="1"/>
      <config>
        <option value="bg-light">Light</option>
        <option value="bg-dark">Dark</option>
        <option value="bg-none">None</option>
      </config>
      <default>bg-light</default>
    </input>
    <input type="Checkbox" name="noPadding">
      <label>No padding top</label>
    </input>
    <input type="Checkbox" name="fullWidth">
      <label>Full width</label>
    </input>
  </form>
  <regions>
    <region name="center"/>
  </regions>
</layout>
