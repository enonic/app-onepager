<?xml version="1.0" encoding="UTF-8"?>
<content-type>
  <display-name>Gallery Image</display-name>
  <super-type>base:structured</super-type>
  <form>
    <field-set name="basic">
      <label>Image and info</label>
      <items>
        <input type="ImageSelector" name="image">
          <label>Photo</label>
          <occurrences minimum="1" maximum="1"/>
          <config>
            <allowPath>${site}/*</allowPath>
          </config>
        </input>
        <input type="TextArea" name="caption">
          <label>Caption</label>
          <occurrences minimum="1" maximum="1"/>
        </input>
        <input type="Tag" name="category">
          <label>Category</label>
          <occurrences minimum="0" maximum="5"/>
        </input>
      </items>
    </field-set>
  </form>
</content-type>