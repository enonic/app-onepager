<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<page>
  <display-name>Default</display-name>
  <config>

    <field-set name="banner">
      <label>Banner</label>
      <items>
        <input name="bannerTop" type="Checkbox">
          <label>Banner on top?</label>
          <occurrences minimum="0" maximum="0"/>
        </input>
      </items>
    </field-set>

    <field-set name="meta">
      <label>Meta</label>
      <items>
        <input name="meta-keywords" type="TextLine">
          <label>Meta Keywords</label>
          <occurrences minimum="0" maximum="0"/>
        </input>
        <input name="meta-description" type="TextLine">
          <label>Meta description</label>
          <occurrences minimum="0" maximum="1"/>
        </input>
      </items>
    </field-set>

    <field-set name="contact">
      <label>Contact info</label>
      <items>
        <input type="Checkbox" name="showContactForm">
          <label>Show contact form</label>
          <occurrences minimum="0" maximum="1"/>
        </input>
      </items>
    </field-set>
  </config>
  <regions>
    <region name="main"/>
  </regions>
</page>