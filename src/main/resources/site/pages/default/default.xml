<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<page>
  <display-name>Default</display-name>
  <config>
    <field-set name="meta">
      <label>Meta</label>
      <items>
        <input name="meta-keywords" type="TextLine">
          <label>Meta Keywords</label>
          <occurrences minimum="0" maximum="0"/>
        </input>
        <input name="meta-description" type="TextLine">
          <label>Meta description</label>
          <occurrences minimum="0" maximum="1"/>
        </input>
      </items>
    </field-set>

    <field-set name="slides">
      <label>Banner slides</label>
      <items>
        <item-set name="slide">
          <label>Slide</label>
          <custom-text/>
          <help-text/>
          <occurrences minimum="0" maximum="0"/>
          <items>
            <input type="TextLine" name="header">
              <label>Header</label>
              <help-text/>
              <occurrences minimum="1" maximum="1"/>
            </input>
            <input type="TextLine" name="subtitle">
              <label>Subtitle</label>
              <indexed>true</indexed>
              <help-text/>
              <occurrences minimum="1" maximum="1"/>
            </input>
          </items>
        </item-set>
      </items>
    </field-set>

    <field-set name="contact">
      <label>Contact form</label>
      <items>
        <input type="Checkbox" name="showContactForm">
          <label>Show contact form</label>
          <occurrences minimum="0" maximum="1"/>
        </input>
        <input type="TextLine" name="formTitle">
          <label>Heading</label>
          <occurrences minimum="0" maximum="1"/>
        </input>
        <input type="TextArea" name="formText">
          <label>Description</label>
          <occurrences minimum="0" maximum="1"/>
        </input>
      </items>
    </field-set>
  </config>
  <regions>
    <region name="main"/>
  </regions>
</page>